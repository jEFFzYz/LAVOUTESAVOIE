# Server
NODE_ENV=production
PORT=3000

# CORS (your domain)
CORS_ORIGIN=https://lavoutesavoie.fr

# =============================================================================
# OVH SMTP Configuration
# =============================================================================
# Your OVH email hosting SMTP settings
# Documentation: https://docs.ovh.com/fr/emails/generalites-sur-les-emails-mutualises/

SMTP_HOST=ssl0.ovh.net
SMTP_PORT=465
SMTP_USER=contact@lavoutesavoie.fr
SMTP_PASS=YOUR_EMAIL_PASSWORD_HERE
SMTP_FROM=contact@lavoutesavoie.fr

# Restaurant email (receives reservation notifications)
RESTAURANT_EMAIL=contact@lavoutesavoie.fr

# =============================================================================
# Admin API
# =============================================================================
# Generate a secure key: openssl rand -hex 32
ADMIN_API_KEY=your_secure_api_key_here

